<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rss_cv_id"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:color/holo_blue_bright"
            android:id="@+id/rss_image_id"
            android:layout_marginRight="10dp"/>

        <TextView
            android:text="Headline"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/rss_headline_id"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/rss_image_id"
            android:textSize="20dp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:text="from FAZ, Mo 27th of December"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/rss_info_id"
            android:layout_toRightOf="@id/rss_image_id"
            android:layout_below="@id/rss_headline_id"/>

        <TextView
            android:text="Example text example text example text example text example text example text example text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rss_text_id"
            android:layout_toRightOf="@id/rss_image_id"
            android:layout_below="@id/rss_info_id"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>